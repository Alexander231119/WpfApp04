<UserControl x:Class="VideoLib.VideoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VideoLib"
             mc:Ignorable="d" Loaded="VideoControl_OnLoaded"
             d:DesignHeight="1080" d:DesignWidth="1920" KeyDown="UserControl_KeyDown">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="720"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1280"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="120"/>
        </Grid.ColumnDefinitions>


        <ListBox Name="CarsListBox" 
                 Grid.Column="2" 
                 Grid.Row="3" 
                 SelectionChanged="CarsListBox_SelectionChanged" 
                 SelectionMode="Extended"
                 Grid.ColumnSpan="1" 
                 Margin="0,0,0,0" 
                 Visibility="Collapsed">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=id}"></TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox Name="CarFrameInfoListBox" Grid.Column="3" Grid.Row="1" Grid.RowSpan="3" SelectionChanged="CarFrameInfoListBox_SelectionChanged" />
        <TextBlock  Background='Azure' Name="carframeInfoTextBlock" Grid.Column="2" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Height="170" Width="120" Margin="0,165,0,0"/>

        <UserControl  Grid.Row="1" Grid.Column="0" x:Name="VideoPanel"/>




        <Slider Grid.Column="0" Grid.Row="2"  x:Name="Slider" ValueChanged="Slider_OnValueChanged" SmallChange="1" />
        <ToolBarTray Grid.Column="0"  HorizontalAlignment="Left" Height="30" VerticalAlignment="Center" Width="1440" Visibility="Collapsed" Grid.ColumnSpan="4" >
            <ToolBar>

            </ToolBar>
        </ToolBarTray>
        <Button Name="OpenDbButton" Grid.Column="2" Content="Загрузить" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="80" Click="OpenDbButton_Click"/>
        <Button Name="SaveCarsButton" Grid.Column="2" Content="Сохранить" HorizontalAlignment="Center" Margin="0,35,0,0" Grid.Row="1" VerticalAlignment="Top" Width="80" Click="SaveCarsButton_Click"/>
        <Button Name="DeleteCarButton" Grid.Column="2" Content="Удалить" HorizontalAlignment="Center" Margin="0,60,0,0" Grid.Row="1" VerticalAlignment="Top" Width="80" Click="DeleteCarButton_Click"/>
        <ListBox Name="CrossingsListbox" Grid.Column="2" Grid.Row="1"
                 Margin="0,486,0,0" SelectionChanged="CrossingsListbox_SelectionChanged">

        </ListBox>
        <Button Name="AddCarButton" Grid.Column="2" Content="Добавить" HorizontalAlignment="Center" Margin="0,85,0,0" Grid.Row="1" VerticalAlignment="Top" Width="80" Click="AddCarButton_Click"/>
        <Button Name="PrevKeyFrameButton" Grid.Column="2" Content="пред." HorizontalAlignment="Left" Margin="20,130,0,0" Grid.Row="1" VerticalAlignment="Top" Width="37" Click="PrevKeyFrameButton_Click" />
        <Button x:Name="NextKeyFrameButton" Grid.Column="2" Content="след." HorizontalAlignment="Left" Margin="63,130,0,0" Grid.Row="1" VerticalAlignment="Top" Width="37" Click="NextKeyFrameButton_Click" />
        
        <Slider Name="Slider2" HorizontalAlignment="Left" Margin="0,10,0,0" Grid.Row="3" VerticalAlignment="Top" Width="960" Height="20" ValueChanged="Slider2_ValueChanged"/>
        <CheckBox Name="VisibilityCheckBox" Grid.Column="2" Content="видимость" HorizontalAlignment="Center" Margin="0,110,0,0" Grid.Row="1" VerticalAlignment="Top" Width="80" Unchecked="VisibilityCheckBox_Unchecked" Checked="VisibilityCheckBox_Checked"/>


    </Grid>
</UserControl>
