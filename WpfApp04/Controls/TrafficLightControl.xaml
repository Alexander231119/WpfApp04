<UserControl x:Class="WpfApp04.TrafficLightControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp04"
             mc:Ignorable="d" 
             d:DesignHeight="45" Width="38">
    <Grid x:Name="Grid1" MouseRightButtonDown="Grid1_MouseRightButtonDown">

        <StackPanel VerticalAlignment="Bottom" >
            <Grid>
                <Rectangle x:Name="rectangle1" Stroke ="White"   Fill="White"  />
                <TextBlock x:Name="TrafficLightName" Text="ЧМ2А" HorizontalAlignment="Center" FontWeight="Bold" FontSize="9" />
            </Grid>
            <Grid>
                <!--<Image Source="/images/svetofor1.png" Height="33" Width="14" />-->
                <Rectangle x:Name="zagradRectangle" HorizontalAlignment="Center" Height="12" Fill="Black" VerticalAlignment="Top" Width="12" Margin="0,6,0,0" RenderTransformOrigin="0.5,0.5">
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="45.0"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Rectangle.RenderTransform>
                </Rectangle>
                <Border x:Name="trafficLighrBorder" VerticalAlignment="Top" BorderThickness="7" Visibility="Visible" CornerRadius="3.5,3.5,3.5,3.5" BorderBrush="Black" Width="14" Height="17" Margin="12,1,12,0">


                </Border>
                <Ellipse x:Name="ellipse1" HorizontalAlignment="Center"  Fill="White" Width="4" Height="4" Margin="0,5,0,24"/>

                <Rectangle  HorizontalAlignment="Center" Height="15" Fill="Black" VerticalAlignment="Top" Width="2" Margin="0,18,0,0"/>
                <Ellipse x:Name="ellipse2" HorizontalAlignment="Center"  Fill="White" Width="4" Height="4" Margin="0,10,0,19"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
