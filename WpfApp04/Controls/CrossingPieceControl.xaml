<UserControl x:Class="WpfApp04.CrossingPieceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp04"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="24
             ">
    <Grid x:Name="Grid1" Margin="0,0,0,0" MouseRightButtonDown="Grid1_MouseRightButtonDown">
        <Rectangle HorizontalAlignment="Center" Height="40" Fill="Black" VerticalAlignment="Center" Width="3"/>
        <Grid Margin="3,16,3,12">
           <Rectangle x:Name="rectangle1" Stroke ="Gray"   Fill="White"  />
           <TextBlock Name="CrossingPieceControlTextBlock" 
                   
                    HorizontalAlignment="Center" 
                   TextWrapping="Wrap" Text="989" VerticalAlignment="Center" 
                   Width="20" Height="13" FontSize="9" 
                   FontWeight="Bold" TextAlignment="Center"/> 
            
        </Grid>
        
        
        <Polygon Points="3,0 19,0 22,5 19,10 3,10 6,5 "                  
        Fill="White"  />
        <Polygon Points="8,0 14,0 17,5 14,10 8,10 11,5 " 
        Fill="Black"  />
    </Grid>
</UserControl>
