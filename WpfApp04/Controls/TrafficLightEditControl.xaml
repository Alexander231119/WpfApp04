<UserControl x:Class="WpfApp04.Controls.TrafficLightEditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp04.Controls"
             xmlns:controls="clr-namespace:WpfApp04.Controls"
             xmlns:sys="clr-namespace:System;assembly=System.mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="400">
    <UserControl.Resources>
        

    </UserControl.Resources>
    <Grid Background="LightGray">
        <DataGrid 
            CanUserAddRows="True"
            AutoGenerateColumns="False"
            x:Name="TliRestrictionDataGrid" Margin="0,70,0,0" >
            <DataGrid.Resources>
                <ObjectDataProvider x:Key="AutoBlockCodeProvider" MethodName="GetValues" ObjectType="{x:Type controls:AutoBlockCodeProvider}"/>
                
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="blockCount" Binding="{Binding Path=blockCount}" Width="60"/>
                <DataGridTextColumn Header="скорость" Binding="{Binding Path=speed}" Width="60"/>
                <DataGridTextColumn Header="showblockCount" Binding="{Binding Path=showBlockCount}" Width="60"/>
                <DataGridComboBoxColumn Header="Код" Width="45"
                                        ItemsSource="{Binding Source={StaticResource AutoBlockCodeProvider}}" 
                                        DisplayMemberPath="Description" SelectedValuePath="Code"
                                        SelectedValueBinding="{Binding Path=autoBlockCode}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Name="AddTliRestrictionButton" Content="Добавить ограничение" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Width="138" Click="AddTliRestrictionButton_Click"/>
        <ComboBox 
            Name="EgisAbCombobox"
                  HorizontalAlignment="Left" 
                  Margin="10,10,0,0" 
                  ItemsSource="{Binding ComboItems}"
                  DisplayMemberPath="Display"   
                  SelectedValuePath="Value"    
                  SelectedValue="{Binding SelectedValue, Mode=TwoWay}"
                  VerticalAlignment="Top" 
                  Width="138">


        </ComboBox>

    </Grid>
</UserControl>
