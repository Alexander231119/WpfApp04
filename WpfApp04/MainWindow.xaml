                                    <TextBlock x:Name="KmTextBlock2" Grid.Column="2" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Длина:" VerticalAlignment="Top" Width="43" Height="17" />
